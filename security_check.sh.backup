#!/bin/bash
# Backward-compatible wrapper for the historical security check script.
# Delegates to the maintained security_check.sh implementation.

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
MAIN_SCRIPT="${SCRIPT_DIR}/security_check.sh"

if [[ ! -x "${MAIN_SCRIPT}" ]]; then
  echo "security_check.sh not found or not executable" >&2
  exit 1
fi

# shellcheck source=security_check.sh
exec "${MAIN_SCRIPT}" "$@"
