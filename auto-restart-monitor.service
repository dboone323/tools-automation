[Unit]
Description=Tools Automation Auto-Restart Monitor
After=docker.service
Requires=docker.service

[Service]
Type=simple
User=dboone323
WorkingDirectory=/Users/danielstevens/Desktop/github-projects/tools-automation
ExecStart=/Users/danielstevens/Desktop/github-projects/tools-automation/auto_restart_monitor.sh
